  <%-include('partials/header') %>

  <div class="slider-container">
    <div class="slides" id="slideWrapper">
      <!-- Clone Last Slide -->
      <div class="slide slide<%= sliderData.length %>">
        <div class="slide-content">
          <h2><%= sliderData[sliderData.length - 1].title %></h2>
          <p><%= sliderData[sliderData.length - 1].description %></p>
        </div>
        <img src="<%= sliderData[sliderData.length - 1].image_path %>" alt="Slide">
      </div>

      <!-- Real Slides -->
      <% sliderData.forEach((slide, index) => { %>
        <div class="slide slide<%= index + 1 %>">
          <div class="slide-content">
            <h2><%= slide.title %></h2>
            <p><%= slide.description %></p>
          </div>
          <img src="<%= slide.image_path %>" alt="Slide <%= index + 1 %>">
        </div>
      <% }) %>

      <!-- Clone First Slide -->
      <div class="slide slide1">
        <div class="slide-content">
          <h2><%= sliderData[0].title %></h2>
          <p><%= sliderData[0].description %></p>
        </div>
        <img src="<%= sliderData[0].image_path %>" alt="Slide">
      </div>
    </div>

    <!-- Dots -->
    <div class="dots">
      <% sliderData.forEach((slide, index) => { %>
        <div class="dot <%= index === 0 ? 'active' : '' %>" data-index="<%= index %>"></div>
      <% }) %>
    </div>
  </div>
