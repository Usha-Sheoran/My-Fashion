<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>MyFashion - Login & Sign Up</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      box-sizing: border-box;
    }

    body {
      height: 100vh;
      background: linear-gradient(to right, #ff9a9e, #fad0c4);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .container {
      width: 100%;
      max-width: 400px;
      padding: 35px;
      border-radius: 25px;
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(15px);
      box-shadow: 0 15px 35px rgba(0,0,0,0.3);
      text-align: center;
      position: relative;
      transition: 0.5s ease;
    }

    .container h2 {
      color: #fff;
      font-size: 28px;
      margin-bottom: 20px;
    }

    input {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border-radius: 15px;
      border: none;
      outline: none;
      font-size: 15px;
      background: rgba(255, 255, 255, 0.8);
    }

    button {
      width: 100%;
      padding: 12px;
      background: linear-gradient(to right, #ff758c, #ff7eb3);
      border: none;
      color: #fff;
      font-size: 16px;
      font-weight: bold;
      margin-top: 15px;
      border-radius: 25px;
      cursor: pointer;
    }

    button:hover {
      background: linear-gradient(to right, #ff6a6a, #ff8ba7);
    }

    .toggle-text {
      margin-top: 15px;
      font-size: 14px;
      color: #fff;
    }

    .toggle-text span {
      font-weight: bold;
      color: #ffffff;
      cursor: pointer;
      text-decoration: underline;
    }

    .form-box {
      display: none;
      animation: fade 0.5s;
    }

    .form-box.active {
      display: block;
    }

    @keyframes fade {
      from { opacity: 0; transform: scale(0.9); }
      to { opacity: 1; transform: scale(1); }
    }

    @media screen and (max-width: 500px) {
      .container {
        padding: 25px 20px;
        border-radius: 15px;
      }

      .container h2 {
        font-size: 24px;
      }

      button {
        font-size: 15px;
      }

      input {
        padding: 10px;
        font-size: 14px;
      }
    }
  </style>
</head>
<body>

      <div class="container">
    <!-- Login Form -->
    <div id="loginForm" class="form-box active">
      <h2>Welcome Back </h2>
      <form action="/login" method="POST">
        <input type="email" name="email" placeholder="Email Address" required />
        <input type="password" name="password" placeholder="Password" required />
        <button type="submit">Login</button>
      </form>
      <div class="toggle-text">
        Don't have an account? <span onclick="toggleForm('register')">Register</span>
      </div>
    </div>

    

    <!-- Register Form -->
    <div id="registerForm" class="form-box">
      <h2>Join MyFashion âœ¨</h2>
      <form action="/register" method="POST">
        <input type="text" name="name" placeholder="Full Name" required />
        <input type="email" name="email" placeholder="Email Address" required />
        <input type="password" name="password" placeholder="Password" required />
        <button type="submit">Sign Up</button>
      </form>
      <div class="toggle-text">
        Already have an account? <span onclick="toggleForm('login')">Login</span>
      </div>
    </div>
  </div>

  <script>
    function toggleForm(form) {
      const login = document.getElementById("loginForm");
      const register = document.getElementById("registerForm");
      if (form === 'register') {
        login.classList.remove("active");
        register.classList.add("active");
      } else {
        register.classList.remove("active");
        login.classList.add("active");
      }
    }
  </script>

</body>
</html>